<body>
    <div>
        <h1>Results</h1>
        <ul class="list-group">
            {{#grade_overview}}
            <li class="list-group-item">
                <b>Question {{questionnr}}</b>: {{points}} / {{maxpoints}} points
                <a class="btn btn-primary float-right" data-toggle="collapse" href="#collapseOutput-{{questionnr}}" role="button" aria-expanded="false" aria-controls="collapseOutput-{{questionnr}}">
                    View output
                </a>
                <div class="collapse w-75" style="height: 200px" id="collapseOutput-{{questionnr}}">
                    <div class="card card-body output">{{output}}</div>
                </div>
            </li>
            {{/grade_overview}}
        </ul>
    </div>
</body>

<style>
    .output {
        white-space: pre-wrap;
    }
</style>