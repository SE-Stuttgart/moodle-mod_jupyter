{{!
    @template mod_jupyter/submit_response_modal_table

    Table for showing submit response points after grading.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "message": "error message jajadajajajajajajajaaj",
        "closebutton": 0,
        "announce": 1,
        "points": [
            {
                "question": "1",
                "reached": "5",
                "max": "10"
            },
            {
                "question": "2",
                "reached": "9",
                "max": "12"
            }
        ],
        "error": false,
        "errortype": "",
        "gradelink": ""
    }
}}

<body>
    <div data-element="mod_jupyter/placeholder">
        {{^error}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">{{#str}}submitmodaltablequestionnr,mod_jupyter{{/str}}</th>
                    <th scope="col">{{#str}}submitmodaltablereached,mod_jupyter{{/str}}</th>
                    <th scope="col">{{#str}}submitmodaltablemax,mod_jupyter{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#points}}
                <tr>
                    <th scope="row">{{question}}</th>
                    <td>{{reached}}</td>
                    <td>{{max}}</td>
                </tr>
                {{/points}}
            </tbody>
        </table>
        {{/error}}
        <div>
            {{^error}}
            {{#str}}submitmodalbodytext,mod_jupyter,{{{gradelink}}}{{/str}}
            {{/error}}
            {{#error}}
            {{errormessage}}
            {{/error}}
        </div>
    </div>
</body>
